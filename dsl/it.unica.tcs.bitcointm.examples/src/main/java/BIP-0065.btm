coinbase kAlice as fundsAlice
coinbase kBob as fundsBob

transaction T = {
	input = [
		fundsAlice: sig kAlice;
		fundsBob: sig kBob
	] 
	output = 1 BTC - 10:
		fun(flag, sig1, sig2) . 
			if (flag)
			then after block 50 : (versig(kLenny; sig2) && versig(kAlice,kBob; sig1))
			else versig(kAlice,kBob; sig1,sig2)
}

transaction T_1 = {
	input = T: true sig kAlice sig kLenny
	output = 0: "test"
//	after date 1985-11-05T00:53:20-00:30
	after block 50
}

transaction T_2 = {
	input = T: false sig kAlice sig kBob
	output = 0: "test"
//	after date 1985-11-05T00:53:20-00:30
	after block 50
}

 

